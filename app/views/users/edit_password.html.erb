<div class="card">
    <div class="card-header">
        <h5><%= fa_icon_tag('edit') %> <%= t(:reset_password) %></h5>
        <%= link_to fa_icon_tag('close'), 'javascript:history.go(-1);', :class => 'card-header-close' %>
    </div>

    <div class="card-body">
        <%= form_tag edit_password_user_path(@user), :method => :put do %>
            <div class="row d-block">
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :password, mt(:user, :new_password) %><span class="text-red">*</span>
                    <%= password_field_tag :password, nil, :required => true, :class => 'form-control' %>
                </div>
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :password_confirmation, mt(:user, :password_confirmation) %><span class="text-red">*</span>
                    <%= password_field_tag :password_confirmation, nil, :required => true, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group mb-0">
                <%= submit_tag t('action.submit'), :class => 'btn btn-submit' %>
                <%= link_to t('action.back'), 'javascript:history.go(-1);', :class => 'btn btn-back' %>
            </div>
        <% end %>
    </div>
</div>
