<section>
    <div class="card">
        <div class="card-header d-flex flex-row justify-content-between">
            <h5 class="text-uppercase mb-0">
                <%= fa_icon_tag('edit') %> <%= t(:reset_password) %>
            </h5>
            <%= link_to fa_icon_tag('close'), user_path(@user), :class => 'h5 mb-0 text-decoration-none text-dark' %>
        </div>

        <div class="card-body">
            <%= form_tag edit_password_user_path(@user), :method => :put do %>
                <div class="row">
                    <div class="col-lg-3 col-6">
                        <div class="input-group input-group-sm input-group-align mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><%= mt(:user, :new_password) %><sup class="text-red">*</sup></span>
                            </div>
                            <%= password_field_tag :password, nil, :required => true, :class => 'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-6">
                        <div class="input-group input-group-sm input-group-align mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><%= mt(:user, :password_confirmation) %><sup class="text-red">*</sup></span>
                            </div>
                            <%= password_field_tag :password_confirmation, nil, :required => true, :class => 'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <%= submit_tag t('action.submit'), :class => 'btn btn-primary' %>
                    <%= link_to t('action.back'), user_path(@user), :class => 'btn btn-secondary' %>
                </div>
            <% end %>
        </div>
    </div>
</section>
