<div class="card">
    <div class="card-header">
        <h5><%= fa_icon_tag('user') %> <%= t(:my_account) %> - <%= "#{t('action.edit_model', :model => mt(:user_channel))}" %></h5>
        <%= link_to fa_icon_tag('close'), my_account_users_path, :class => 'card-header-close' %>
    </div>

    <div class="card-body">
        <%= form_tag edit_my_user_channel_users_path, :method => :put do %>
            <div class="row d-block">
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :user_channel, mt(:user_channel) %>
                    <%= select_tag :user_channel_id, options_for_select(user_channel_options, @user.user_channel_id),
                                   :prompt => default_prompt, :class => 'form-control select2' %>
                </div>
            </div>
            <div class="form-group mb-0">
                <%= submit_tag t('action.submit'), :class => 'btn btn-submit' %>
                <%= link_to t('action.back'), my_account_users_path, :class => 'btn btn-back' %>
            </div>
        <% end %>
    </div>
</div>
