<div class="card">
    <div class="card-header d-flex flex-row justify-content-between">
        <h5 class="text-uppercase mb-0">
            <%= fa_icon_tag('user') %> <%= t(:my_account) %> - <%= "#{t('action.edit', :model => mt(:user, :password))}" %>
        </h5>
        <%= link_to fa_icon_tag('close'), my_account_users_path, :class => 'h5 mb-0 text-decoration-none text-dark' %>
    </div>

    <div class="card-body">
        <%= form_tag edit_my_password_users_path, :method => :put do %>
            <div class="row d-block">
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :current_password, mt(:user, :current_password) %><span class="text-red">*</span>
                    <%= password_field_tag :current_password, nil, :required => true, :class => 'form-control' %>
                </div>
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :new_password, mt(:user, :new_password) %><span class="text-red">*</span>
                    <%= password_field_tag :password, nil, :required => true, :class => 'form-control' %>
                </div>
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :password_confirmation, mt(:user, :password_confirmation) %><span class="text-red">*</span>
                    <%= password_field_tag :password_confirmation, nil, :required => true, :class => 'form-control' %>
                </div>
            </div>
            <div class="form-group mb-0">
                <%= submit_tag t('action.submit'), :class => 'btn btn-primary' %>
                <%= link_to t('action.back'), my_account_users_path, :class => 'btn btn-secondary' %>
            </div>
        <% end %>
    </div>
</div>
