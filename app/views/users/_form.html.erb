<div class="row">
    <div class="col-12 form-group">
        <%= user_role_badge(@user.role) %>
        <%= user_status_badge(@user.status) %>
        <span class="badge badge-light"><%= show_timestamps(@user) %></span>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :email, mt(:user, :email) %><span class="text-red">*</span>
        <%= f.email_field :email, :required => true, :focus => true, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :password, mt(:user, :password) %><span class="text-red">*</span>
        <%= f.password_field :password, :required => true, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :password_confirmation, mt(:user, :password_confirmation) %><span class="text-red">*</span>
        <%= f.password_field :password_confirmation, :required => true, :class => 'form-control' %>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :role, mt(:user, :role) %><span class="text-red">*</span>
        <%= f.select :role, user_role_options, { :include_blank => false }, :class => 'form-control select2' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :status, mt(:user, :status) %><span class="text-red">*</span>
        <%= f.select :status, user_status_options, { :include_blank => false }, :class => 'form-control select2' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :candidate_access_limit, mt(:user, :candidate_access_limit) %><span class="text-red">*</span>
        <%= f.number_field :candidate_access_limit, :min => 1, :step => 1, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :name_cn, mt(:user, :name_cn) %><span class="text-red">*</span>
        <%= f.text_field :name_cn, :required => true, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :name_en, mt(:user, :name_en) %>
        <%= f.text_field :name_en, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :title, mt(:user, :title) %>
        <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :date_of_employment, mt(:user, :date_of_employment) %>
        <%= f.text_field :date_of_employment, :class => 'form-control datepicker' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :phone, mt(:user, :phone) %>
        <%= f.text_field :phone, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group">
        <%= f.label :date_of_birth, mt(:user, :date_of_birth) %>
        <%= f.text_field :date_of_birth, :class => 'form-control datepicker' %>
    </div>
</div>