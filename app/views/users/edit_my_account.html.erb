<div class="card">
    <div class="card-header">
        <h5><%= fa_icon_tag('user') %> <%= t(:my_account) %> - <%= "#{t('action.edit_model', :model => t(:my_account))}" %></h5>
        <%= link_to fa_icon_tag('close'), my_account_users_path, :class => 'card-header-close' %>
    </div>

    <div class="card-body">
        <%= form_tag edit_my_account_users_path, :method => :put do %>
            <div class="row">
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :name_cn, mt(:user, :name_cn) %><span class="text-red">*</span>
                    <%= text_field_tag :name_cn, @user.name_cn, :required => true, :class => 'form-control' %>
                </div>
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :name_en, mt(:user, :name_en) %>
                    <%= text_field_tag :name_en, @user.name_en, :class => 'form-control' %>
                </div>
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :phone, mt(:user, :phone) %>
                    <%= text_field_tag :phone, @user.phone, :class => 'form-control' %>
                </div>
                <div class="col-lg-3 col-6 form-group">
                    <%= label_tag :date_of_birth, mt(:user, :date_of_birth) %>
                    <%= text_field_tag :date_of_birth, @user.date_of_birth.try(:strftime, '%F'), :class => 'form-control datepicker' %>
                </div>
            </div>

            <div class="form-group mb-0">
                <%= submit_tag t('action.submit'), :class => 'btn btn-submit' %>
                <%= link_to t('action.back'), my_account_users_path, :class => 'btn btn-back' %>
            </div>
        <% end %>
    </div>
</div>
