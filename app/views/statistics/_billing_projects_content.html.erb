<table class="table table-sm table-striped border nowrap card-text">
    <thead>
    <tr>
        <th><%= mt(:project, :id) %></th>
        <th><%= mt(:project, :code_area) %></th>
        <th><%= mt(:project, :name) %></th>
        <th><%= mt(:project, :code) %></th>
        <th><%= mt(:project, :total_price) %></th>
        <th><%= mt(:project, :billed_at) %></th>
        <th><%= mt(:project, :reviewed_at) %></th>
        <th><%= mt(:project, :invoice_no) %></th>
        <th class="action"><%= t(:operation) %></th>
    </tr>
    </thead>
    <tbody>
    <% @projects.each do |project| %>
        <tr>
            <td><%= content_tag :span, "# #{project.uid}", :class => 'text-gray' %></td>
            <td><%= project.code_area %></td>
            <td title="<%= project.name %>"><%= truncate(project.name, length: 8) %></td>
            <td><%= project.code %></td>
            <td><%= project.total_price %></td>
            <td><%= project.ended_at.try(:strftime, '%F %H:%M') %></td>
            <td><%= project.reviewed_at.try(:strftime, '%F %H:%M') %></td>
            <td><%= project.invoice_no %></td>
            <td class="action">
                <div class="btn-group">
                    <%= link_to edit_invoice_info_project_path(project), class: 'btn btn-dark btn-xs' do %>
                        <i class="fa fa-cny"></i> <%= t(:invoice) %>
                    <% end %>
                    <%= link_to finance_index_path(project_id: project.id), class: 'btn btn-info btn-xs' do %>
                        <i class="fa fa-list-ul"></i> <%= t('dashboard.detail') %>
                    <% end %>
                </div>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>