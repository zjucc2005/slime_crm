$(document).ready(function(){
    let chart = echarts.init(document.getElementById('current_month_call_ranking_chart'), 'light');
    let option = {
        title: {
        },
        tooltip: {
            trigger: 'axis',
            axisPointer: {
                type: 'shadow'
            }
        },
        grid: {
            top: '2%',
            left: '1%',
            right: '3%',
            bottom: '2%',
            containLabel: true
        },
        xAxis: {
            type: 'value',
            position: 'top',
            boundaryGap: [0, 0.01],
            axisLabel: {
                formatter: '{value} h'
            }
        },
        yAxis: {
            type: 'category',
            data: <%= @result.map{|e| e[:name_abbr]}.reverse.to_json.html_safe %>,
        },
        series: [
            {
                type: 'bar',
                name: '本月',
                barWidth: '60%',
                barGap: '10%',
                label: {
                    show: true,
                    position: 'right',
                    valueAnimation: true
                },
                data: <%= @result.map{ |e| e[:count][0] }.reverse.to_json.html_safe %>
            },
            {
                type: 'bar',
                name: '上月',
                barWidth: '15%',
                barGap: '10%',
                label: {
                    show: true,
                    position: 'right',
                    valueAnimation: true
                },
                itemStyle: {
                    color: '#6c757d'
                },
                data: <%= @result.map{ |e| e[:count][1] }.reverse.to_json.html_safe %>
            },
        ]
    };
    chart.setOption(option);
});