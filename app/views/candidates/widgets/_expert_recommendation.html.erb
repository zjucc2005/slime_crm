<% recommended_experts_count = candidate.recommended_experts.count %>
<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <%= fa_icon_tag('users') %> <%= t(:expert_recommendation) %>
    <%= count_badge(recommended_experts_count) %>
</button>
<div class="dropdown-menu">
    <%= link_to t('action.new'), new_candidate_path(recommender_id: candidate.id), :class => 'dropdown-item' %>
    <%= link_to candidates_path(recommender_id: candidate.id, per_page: 100), :class => 'dropdown-item' do %>
        <%= t(:expert_recommended) %> <%= count_badge(recommended_experts_count) %>
    <% end %>
</div>
