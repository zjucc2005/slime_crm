<%= button_tag :type => 'button', :class => 'btn btn-default', :data => { :toggle => 'modal', :target => '#addToProjectModal'} do %>
    <%= fa_icon_tag('map') %> <%= t(:add_to_project) %>
<% end if can?(:add_experts, Project) %>

<div id="addToProjectModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><%= t(:add_to_project) %></h4>
                <button type="button" data-dismiss="modal" class="close">&times;</button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 form-group">
                        <%= label_tag :project_id, mt(:project) %><span class="text-red">*</span>
                        <%= select_tag :project_id, options_for_select(project_options, params[:project_id]),
                                       :prompt => default_prompt, :required => true, :class => 'form-control select2' %>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-back"><%= t('action.close') %></button>
                <% if uid.nil? %>
                    <%= link_to t('action.submit_and_continue_to_add'), 'javascript:void(0)', :onclick => "addExpertToProject(1, #{uid});", :class => 'btn btn-info' %>
                <% end %>
                <%= link_to t('action.submit'), 'javascript:void(0)', :onclick => "addExpertToProject(0, #{uid});", :class => 'btn btn-submit' %>
            </div>
        </div>
    </div>
</div>