<% provide :nav_candidates, 'active' %>

<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex flex-row justify-content-between">
                    <h5 class="text-uppercase mb-0"><%= t(:new, :model => mt(:candidate)) %></h5>
                    <%= link_to '&times;'.html_safe, candidates_path, :class => 'h5 mb-0' %>
                </div>

                <div class="card-body">
                    <%= form_for @candidate do |f| %>
                        <%= render :partial => 'form', :locals => { :f => f } %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
