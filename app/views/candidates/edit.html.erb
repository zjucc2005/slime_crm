<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex flex-row justify-content-between">
                    <h5 class="text-uppercase mb-0">
                        <i class="fa fa-user-circle"></i>
                        <%= t('action.edit', :model => mt(:candidate)) %>
                    </h5>
                    <%= link_to '&times;'.html_safe, candidates_path, :class => 'h5 mb-0 text-decoration-none' %>
                </div>

                <div class="card-body">
                    <%= form_for @candidate do |f| %>
                        <%= render :partial => 'form', :locals => { :f => f } %>
                        <%= render :partial => 'form_work_exp' %>

                        <div class="form-group mb-0">
                            <%= f.submit t('action.submit'), :class => 'btn btn-primary' %>
                            <%= link_to t('action.back'), candidates_path,:class => 'btn btn-secondary' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>