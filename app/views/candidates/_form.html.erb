<div class="row">
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :name_cn) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :name_cn, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :name_en) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :name_en, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :gender) %></span>
            </div>
            <%= f.select :gender, Candidate::GENDER.to_a.map(&:reverse), { :include_blank => true }, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:candidate, :city) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :city, :required => true, :class => 'form-control' %>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :phone) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :phone, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :phone1) %></span>
            </div>
            <%= f.text_field :phone1, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :email) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :email, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :email1) %></span>
            </div>
            <%= f.text_field :email1, :class => 'form-control' %>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :industry) %></span>
            </div>
            <%= f.text_field :industry, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :title) %></span>
            </div>
            <%= f.text_field :industry, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><%= mt(:candidate, :date_of_birth) %></span>
            </div>
            <%= f.text_field :date_of_birth, :class => 'form-control datetimepicker' %>
        </div>
    </div>




</div>



<div class="form-group">
    <%= f.submit t(:submit), :class => 'btn btn-primary' %>
</div>