<div id="candidate_card" class="row">
    <% @candidates.ids.each do |uid| %>
        <div class="col-lg-12">
            <div class="card px-5 py-3 candidate-card">
                <%= html_safe @card_template.result(uid) %>
            </div>
        </div>
    <% end %>
</div>

<div class="float-bar">
    <%= link_to 'javascript:history.go(-1);' do %>
        <%= button_tag '', :type => 'button', :class => 'float-bar-btn fa fa-arrow-left' %>
    <% end %>
    <%= button_tag '', :type => 'button', :class => 'float-bar-btn fa fa-clipboard', :onclick => "clipboard('candidate_card');" %>
</div>
