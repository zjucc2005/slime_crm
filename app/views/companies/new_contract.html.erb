<div class="card">
    <div class="card-header">
        <h5><%= fa_icon_tag('file-text') %> <%= t('action.new_model', :model => mt(:contract)) %></h5>
        <%= link_to fa_icon_tag('close'), company_path(@company), :class => 'card-header-close' %>
    </div>

    <div class="card-body">
        <%= form_for @contract, :html => { :multipart => true } do |f| %>
            <%= render :partial => 'contracts/form', :locals => { :f => f } %>

            <div class="form-group mt-3 mb-0">
                <%= f.submit t('action.submit'), :class => 'btn btn-primary' %>
                <%= link_to t('action.back'), company_path(@company), :class => 'btn btn-secondary' %>
            </div>
        <% end %>
    </div>
</div>
