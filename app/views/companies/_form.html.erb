<%= model_error_tag(@company) %>

<div class="row">
    <div class="col-12">
        <div class="form-group">
            <%= company_category_badge(@company.category) %>
            <%= company_signed_badge(@company.is_signed?) %>
            <span class="badge badge-light"><%= show_creator(@company) %></span>
            <span class="badge badge-light"><%= show_timestamps(@company) %></span>
        </div>
    </div>


    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :name) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :name, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :name_abbr) %></span>
            </div>
            <%= f.text_field :name_abbr, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :tax_id) %></span>
            </div>
            <%= f.text_field :tax_id, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :industry) %></span>
            </div>
            <%= f.text_field :industry, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :city) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :city, :required => true, :class => 'form-control autocomplete-city' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :address) %></span>
            </div>
            <%= f.text_field :address, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :phone) %></span>
            </div>
            <%= f.text_field :phone, :class => 'form-control' %>
        </div>
    </div>

    <div class="col-12">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :description) %></span>
            </div>
            <%= f.text_area :description, :rows => 5, :class => 'form-control' %>
        </div>
    </div>

</div>

<script>
    $('.autocomplete-city').autocomplete({ source: '/location_data/autocomplete_city.json', delay: 500 });
</script>