<div class="row">
    <div class="col-12">
        <div class="form-group">
            <span class="badge badge-light"><%= show_owner(@company) %></span>
            <span class="badge badge-light"><%= show_timestamps(@company) %></span>
        </div>
    </div>

    <div class="col-12">
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="input-group input-group-sm input-group-align mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><%= mt(:company, :category) %><sup class="text-red">*</sup></span>
                    </div>
                    <%= f.select :category, category_options, {}, :required => true, :class => 'form-control' %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :name) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :name, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :name_abbr) %></span>
            </div>
            <%= f.text_field :name_abbr, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :industry) %></span>
            </div>
            <%= f.text_field :industry, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :city) %></span>
            </div>
            <%= f.text_field :city, :class => 'form-control' %>
        </div>
    </div>

    <div class="col-12">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:company, :description) %></span>
            </div>
            <%= f.text_area :description, :rows => 3, :class => 'form-control' %>
        </div>
    </div>

</div>