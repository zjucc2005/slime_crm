<section>
    <div class="card">
        <div class="card-header d-flex flex-row justify-content-between">
            <h5 class="text-uppercase mb-0">
                <i class="fa fa-bank"></i>
                <%= mt(:company) %>
            </h5>
            <%= link_to fa_icon_tag('remove'), companies_path, :class => 'h5 mb-0 text-decoration-none text-dark' %>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-12 d-flex flex-row justify-content-between">
                    <h6>
                        <span class="text-gray mr-3"><%= "# #{@company.uid}" %></span>
                        <span><%= @company.name %></span>
                    </h6>
                    <div class="btn-group btn-group-sm">
                        <%= link_to new_contract_company_path(@company), :class => 'btn btn-success' do %>
                            <i class="fa fa-plus"></i> <%= "#{t('action.new', :model => mt(:contract))}" %>
                        <% end %>
                        <%= link_to edit_company_path(@company), :class => 'btn btn-dark' do %>
                            <i class="fa fa-edit"></i> <%= "#{t('action.edit', :model => mt(:company))}" %>
                        <% end %>
                    </div>
                </div>
            </div>

            <!-- main info -->
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <span class="badge badge-light"><%= show_owner(@company) %></span>
                        <span class="badge badge-light"><%= show_timestamps(@company) %></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-3 col-6">
                            <div class="input-group input-group-sm input-group-align mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><%= mt(:company, :category) %></span>
                                </div>
                                <%= content_tag :span, company_category_badge(@company.category) ,:class => 'form-control' %>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-6">
                    <div class="input-group input-group-sm input-group-align mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><%= mt(:company, :name) %></span>
                        </div>
                        <%= content_tag :span, @company.name, :class => 'form-control' %>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="input-group input-group-sm input-group-align mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><%= mt(:company, :name_abbr) %></span>
                        </div>
                        <%= content_tag :span, @company.name_abbr, :class => 'form-control' %>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="input-group input-group-sm input-group-align mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><%= mt(:company, :industry) %></span>
                        </div>
                        <%= content_tag :span, @company.industry, :class => 'form-control' %>
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="input-group input-group-sm input-group-align mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><%= mt(:company, :city) %></span>
                        </div>
                        <%= content_tag :span, @company.city, :class => 'form-control' %>
                    </div>
                </div>

                <div class="col-12">
                    <div class="input-group input-group-sm input-group-align mb-2">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><%= mt(:company, :description) %></span>
                        </div>
                        <%= text_area_tag :description, @company.description, :rows => 3, :disabled => true, :class => 'form-control bg-white' %>
                    </div>
                </div>
            </div>

            <!-- contract card -->
            <%= render :partial => 'show_contract',  :locals => { :contracts => @contracts } %>
        </div>
    </div>
</section>