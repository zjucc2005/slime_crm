<%= model_error_tag(@card_template) %>

<div class="row">
    <div class="col-lg-3 col-12 form-group">
        <%= f.label :category %><span class="text-red">*</span>
        <%= f.select :category, CardTemplate::CATEGORY_DESC.to_a.map(&:reverse), { :prompt => default_prompt },
                     :required => true, :class => 'form-control select2' %>
    </div>
    <div class="col-lg-9 col-12 form-group">
        <%= f.label :name %><span class="text-red">*</span>
        <%= f.text_field :name, :required => true, :class => 'form-control' %>
    </div>
    <div class="col-12 form-group">
        <%= f.label :content %><span class="text-red">*</span>
        <%= f.text_area :content, :rows => [12, @card_template.content.to_s.split("\n").length].max, :required => true, :class => 'form-control' %>
    </div>
</div>
