<div class="card">
    <div class="card-header d-flex flex-row justify-content-between">
        <h5 class="text-uppercase mb-0">
            <%= fa_icon_tag('map') %> <%= t('action.add', :model => mt(:project_task)) %>
        </h5>
        <%= link_to fa_icon_tag('close'), project_path(@project), :class => 'h5 mb-0 text-decoration-none text-dark' %>
    </div>

    <div class="card-body">
        <%= form_for @project_task, :url => add_project_task_project_path(@project), :method => :put do |f| %>
            <%= model_error_tag(@project_task) %>

            <div class="row">
                <div class="col-12 form-group">
                    <span class="badge badge-light"><%= show_creator(@project_task) %></span>
                    <span class="badge badge-light"><%= show_timestamps(@project_task) %></span>
                </div>

                <div class="col-3 form-group input-group input-group-sm input-group-align">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><%= mt(:project_task, :category) %><sup class="text-red">*</sup></span>
                    </div>
                    <%= f.select :category, project_task_category_options, { :include_blank => false }, :class => 'form-control' %>
                </div>
                <div class="col-3 form-group input-group input-group-sm input-group-align">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><%= mt(:expert) %><sup class="text-red">*</sup></span>
                    </div>
                    <%= f.select :candidate_id, project_task_candidate_options, { :prompt => default_prompt },
                                 :required => true, :class => 'form-control' %>
                </div>
                <div class="col-3 form-group input-group input-group-sm input-group-align">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><%= mt(:project_task, :started_at) %><sup class="text-red">*</sup></span>
                    </div>
                    <%= f.text_field :started_at, :required => true, :class => 'form-control datetimepicker' %>
                </div>
                <div class="col-3 form-group input-group input-group-sm input-group-align">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><%= mt(:project_task, :ended_at) %><sup class="text-red">*</sup></span>
                    </div>
                    <%= f.text_field :ended_at, :required => true, :class => 'form-control datetimepicker' %>
                </div>


            </div>

            <div class="form-group mb-0">
                <%= submit_tag t('action.submit'), :class => 'btn btn-primary' %>
                <%= link_to t('action.back'), project_path(@project), :class => 'btn btn-secondary' %>
            </div>
        <% end %>
    </div>
</div>