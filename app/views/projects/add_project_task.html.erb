<div class="card">
    <div class="card-header">
        <h5><%= fa_icon_tag('map') %> <%= t('action.add_model', :model => mt(:project_task)) %></h5>
        <%= link_to fa_icon_tag('close'), project_path(@project), :class => 'card-header-close' %>
    </div>

    <div class="card-body">
        <%= form_for @project_task, :url => add_project_task_project_path(@project), :method => :put do |f| %>
            <%= model_error_tag(@project_task) %>

            <div class="row">
                <div class="col-12 form-group">
                    <span class="badge badge-light"><%= show_creator(@project_task) %></span>
                    <span class="badge badge-light"><%= show_timestamps(@project_task) %></span>
                </div>

                <div class="col-lg-3 col-12 form-group">
                    <%= f.label :category, mt(:project_task, :category) %><span class="text-red">*</span>
                    <%= f.select :category, project_task_category_options, { :include_blank => false }, :class => 'form-control select2' %>
                </div>
                <div class="col-lg-3 col-12 form-group">
                    <%= f.label :expert, mt(:expert) %><span class="text-red">*</span>
                    <%= f.select :candidate_id, project_task_candidate_options, { :prompt => default_prompt },
                                 :required => true, :class => 'form-control select2' %>
                </div>
                <div class="col-lg-3 col-12 form-group">
                    <%= f.label :started_at, mt(:project_task, :started_at) %><span class="text-red">*</span>
                    <%= f.text_field :started_at, :required => true, :class => 'form-control datetimepicker' %>
                </div>
                <div class="col-lg-3 col-12 form-group">
                    <%= f.label :ended_at, mt(:project_task, :ended_at) %><span class="text-red">*</span>
                    <%= f.text_field :ended_at, :required => true, :class => 'form-control datetimepicker' %>
                </div>
            </div>

            <div class="form-group mb-0">
                <%= submit_tag t('action.submit'), :class => 'btn btn-primary' %>
                <%= link_to t('action.back'), project_path(@project), :class => 'btn btn-secondary' %>
            </div>
        <% end %>
    </div>
</div>