<%= model_error_tag(@project) %>

<div class="row">
    <div class="col-12 form-group">
        <span class="badge badge-light"><%= show_creator(@project) %></span>
        <span class="badge badge-light"><%= show_timestamps(@project) %></span>
    </div>

    <div class="col-12 form-group input-group input-group-sm input-group-align">
        <div class="input-group-prepend">
            <span class="input-group-text"><%= mt(:project, :company) %><sup class="text-red">*</sup></span>
        </div>
        <%= f.select :company_id, @signed_company_options, { :prompt => default_prompt }, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group input-group input-group-sm input-group-align">
        <div class="input-group-prepend">
            <span class="input-group-text"><%= mt(:project, :name) %><sup class="text-red">*</sup></span>
        </div>
        <%= f.text_field :name, :required => true, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group input-group input-group-sm input-group-align">
        <div class="input-group-prepend">
            <span class="input-group-text"><%= mt(:project, :code) %><sup class="text-red">*</sup></span>
        </div>
        <%= f.text_field :code, :required => true, :class => 'form-control' %>
    </div>
    <div class="col-lg-3 col-6 form-group input-group input-group-sm input-group-align">
        <div class="input-group-prepend">
            <span class="input-group-text"><%= mt(:project, :started_at) %></span>
        </div>
        <%= f.text_field :started_at, :class => 'form-control datepicker' %>
    </div>
    <div class="col-lg-3 col-6 form-group input-group input-group-sm input-group-align">
        <div class="input-group-prepend">
            <span class="input-group-text"><%= mt(:project, :ended_at) %></span>
        </div>
        <%= f.text_field :ended_at, :class => 'form-control datepicker' %>
    </div>
    <div class="col-12 form-group input-group input-group-sm input-group-align">
        <div class="input-group-prepend">
            <span class="input-group-text"><%= mt(:project, :requirement) %><sup class="text-red">*</sup></span>
        </div>
        <%= f.text_area :requirement, :required => true, :rows => 5, :class => 'form-control' %>
    </div>
</div>

<script>
