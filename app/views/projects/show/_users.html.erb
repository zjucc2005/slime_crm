<div class="card card-inner mb-3">
    <div class="card-header">
        <h5><%= fa_icon_tag('users') %> <%= mt(:user) %></h5>
        <span>
            <% if can?(:index, User) && @project.can_edit? %>
                <% if @project.can_add_pm_user? %>
                    <%= link_to users_path(project_id: @project.id, from_source: 'project_add_pm', role: 'pm'), :class => 'btn btn-primary btn-xs' do %>
                        <%= fa_icon_tag('plus') %> <%= t('action.add_model', :model => mt(:project, :pm)) %>
                    <% end %>
                <% else %>
                    <%= link_to 'javascript:void(0);', :onclick => "alert('#{t(:project_can_only_have_one_pm)}')", :class => 'btn btn-secondary btn-xs' do %>
                        <%= fa_icon_tag('plus') %> <%= t('action.add_model', :model => mt(:project, :pm)) %>
                    <% end %>
                <% end %>
                <%= link_to users_path(project_id: @project.id, from_source: 'project_add_pa', role: 'pa'), :class => 'btn btn-info btn-xs' do %>
                    <%= fa_icon_tag('plus') %> <%= t('action.add_model', :model => mt(:project, :pa)) %>
                <% end %>
            <% end %>
        </span>
    </div>

    <div class="card-body table_responsive">
        <% if users.any? %>
            <table class="table table-sm table-striped table-hover card-text">
                <thead>
                <tr>
                    <th><%= mt(:user, :id) %></th>
                    <th><%= mt(:user, :email) %></th>
                    <th><%= mt(:user, :name_cn) %></th>
                    <th><%= mt(:user, :role) %></th>
                    <th class="action"><%= t(:operation) %></th>
                </tr>
                </thead>
                <tbody>
                <% users.each do |user| %>
                    <tr>
                        <td><%= link_to "# #{user.uid}", user_path(user), :class => 'text-gray' %></td>
                        <td><%= link_to user.email, user_path(user) %></td>
                        <td><%= user.name_cn %></td>
                        <td><%= user_role_badge(user.role) %></td>
                        <td class="action">
                            <%= link_to delete_user_project_path(@project, user_id: user.id),
                                        :method => :delete, :data => { :confirm => t(:sure_to_remove) },
                                        :class => 'btn btn-danger btn-xs' do %>
                                <%= fa_icon_tag('times') %> <%= t('action.remove') %>
                            <% end if can?(:delete_user, Project) && @project.can_edit? %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        <% else %>
            <div class="p-2 text-center">
                <h5 class="text-gray mb-0"><%= t(:not_found) %></h5>
            </div>
        <% end %>
    </div>
</div>