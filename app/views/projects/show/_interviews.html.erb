<div class="card mb-3">
    <div class="card-header d-flex flex-row justify-content-between">
        <h5 class="text-uppercase mb-0">
            <%= fa_icon_tag('street-view') %> 访谈
        </h5>
        <%= link_to t(:go_to_add), '#', :onclick => 'alert("开发中")' %>
    </div>

    <div class="card-body p-2">
        <% if interviews.any? %>
            <table class="table table-sm table-striped table-hover card-text">
                <thead>
                <tr>
                    <th><%= mt(:candidate, :id) %></th>
                    <th><%= mt(:candidate, :name) %></th>
                    <th><%= mt(:candidate, :phone) %></th>
                    <th><%= mt(:candidate, :email) %></th>
                </tr>
                </thead>
                <tbody>
                <% clients.each do |client| %>
                    <tr>
                        <td><%= content_tag :span, "# #{client.uid}", :class => 'text-gray' %></td>
                        <td><%= "#{client.name_cn}#{client.name_en.present? ? "(#{client.name_en})" : nil }" %></td>
                        <td><%= client.phone %><br><%= client.phone1 %></td>
                        <td><%= client.email %><br><%= client.email1 %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        <% else %>
            <div class="p-2 text-center">
                <h5 class="text-gray mb-0">
                    <%= t(:not_found) %>,
                    <%= link_to t(:go_to_add), '#', :onclick => 'alert("开发中")' %>
                </h5>
            </div>
        <% end %>
    </div>
</div>