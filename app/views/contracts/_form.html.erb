<%= model_error_tag(@contract) %>
<div class="row border-bottom mb-3">
    <%= f.hidden_field :company_id, :required => true %>

    <div class="col-lg-12 form-group">
        <%= f.label :file, mt(:contract, :file) %>
        <%= link_to @contract.file.url do %><%= fa_icon_tag('download') %> <%= t(:file) %><% end if @contract.file.present? %>
        <%= f.file_field :file, :required => (action_name != 'edit'), :class => 'form-control-file' %>
    </div>

    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :started_at) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :started_at, :required => true, :class => 'form-control datepicker' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :ended_at) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :ended_at, :required => true, :class => 'form-control datepicker' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :cpt) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.number_field :cpt, :min => 0, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :min_bill_duration) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.number_field :min_bill_duration, :min => 0, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :follow_bill_duration) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.number_field :follow_bill_duration, :min => 0, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :payment_time) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.select :payment_time, payment_time_options, { :include_blank => false }, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :payment_way) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.text_field :payment_way, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :is_tax_included) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.select :is_tax_included, boolean_options, { :include_blank => false }, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, :is_invoice_needed) %><sup class="text-red">*</sup></span>
            </div>
            <%= f.select :is_invoice_needed, boolean_options, { :include_blank => false }, :class => 'form-control' %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, 'financial_info.name_cn') %></span>
            </div>
            <%= text_field_tag :'financial_info[name_cn]', @contract.financial_info['name_cn'], :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, 'financial_info.name_en') %></span>
            </div>
            <%= text_field_tag :'financial_info[name_en]', @contract.financial_info['name_en'], :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, 'financial_info.phone') %></span>
            </div>
            <%= text_field_tag :'financial_info[phone]', @contract.financial_info['phone'], :class => 'form-control' %>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="input-group input-group-sm input-group-align mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= mt(:contract, 'financial_info.email') %></span>
            </div>
            <%= email_field_tag :'financial_info[email]', @contract.financial_info['email'], :class => 'form-control' %>
        </div>
    </div>
</div>